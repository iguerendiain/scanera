<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <nacholab.scanera.lib.ui.PhotoEditView
        android:id="@+id/photo_edit"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <nacholab.scanera.lib.ui.CropImageView
        app:layout_constraintTop_toTopOf="@id/photo_edit"
        app:layout_constraintStart_toStartOf="@id/photo_edit"
        app:layout_constraintEnd_toEndOf="@id/photo_edit"
        app:layout_constraintBottom_toBottomOf="@id/photo_edit"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/rccw"
                android:text="RCCW"
                app:layout_constraintTop_toBottomOf="@id/correctPerspective"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/reset"
                android:text="Reset"
                app:layout_constraintTop_toBottomOf="@id/correctPerspective"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/rcw"
                android:text="RCW"
                app:layout_constraintTop_toBottomOf="@id/correctPerspective"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/brup"
                android:text="BR+"
                app:layout_constraintTop_toBottomOf="@id/correctPerspective"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/brdn"
                android:text="BR-"
                app:layout_constraintTop_toBottomOf="@id/correctPerspective"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/ctup"
                android:text="CT+"
                app:layout_constraintTop_toBottomOf="@id/correctPerspective"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/ctdn"
                android:text="CT-"
                app:layout_constraintTop_toBottomOf="@id/correctPerspective"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/stup"
                android:text="ST+"
                app:layout_constraintTop_toBottomOf="@id/correctPerspective"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/stdn"
                android:text="ST-"
                app:layout_constraintTop_toBottomOf="@id/correctPerspective"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/discard"
            android:text="Discard"
            app:layout_constraintTop_toBottomOf="@id/correctPerspective"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/save"
            android:text="Save"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>